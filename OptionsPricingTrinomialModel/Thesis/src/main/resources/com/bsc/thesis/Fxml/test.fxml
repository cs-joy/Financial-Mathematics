<GridPane xmlns="http://javafx.com/javafx/17" stylesheets="@../css/styles.css" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.bsc.thesis.OldApplicationController"
          prefHeight="600" prefWidth="800"
          hgap="10" vgap="10"
          alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>


    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="300"/>
    </columnConstraints>


    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
        <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
        <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
        <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
        <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
        <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
        <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
        <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
        <RowConstraints vgrow="SOMETIMES" minHeight="50"/>
        <RowConstraints vgrow="ALWAYS" minHeight="100"/>
    </rowConstraints>

    <!-- Option Type Selection -->
    <Text text="Option Type:" GridPane.columnIndex="0" GridPane.rowIndex="0"
        styleClass="input-label"/>
    <ComboBox fx:id="optionTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="European Call"/>
                <String fx:value="European Put"/>
                <String fx:value="American Put"/>
                <String fx:value="Exotic Option"/>
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Common Parameters (initially visible)
    <Text text="Initial Stock Price (S0):" GridPane.columnIndex="0" GridPane.rowIndex="1"
        styleClass="input-label"/>
    <TextField fx:id="input1" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Text text="Strike Price (K):" GridPane.columnIndex="0" GridPane.rowIndex="2"
        styleClass="input-label"/>
    <TextField fx:id="input2" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Text text="Risk-free Rate (r):" GridPane.columnIndex="0" GridPane.rowIndex="3"
        styleClass="input-label"/>
    <TextField fx:id="input3" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Text text="Number of Steps (N):" GridPane.columnIndex="0" GridPane.rowIndex="4"
      styleClass="input-label"/>
    <TextField fx:id="input4" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Text text="Time Step Size (h):" GridPane.columnIndex="0" GridPane.rowIndex="5"
      styleClass="input-label"/>
    <TextField fx:id="input5" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Text text="Volatility (Ïƒ):" GridPane.columnIndex="0" GridPane.rowIndex="6"
        styleClass="input-label"/>
    <TextField fx:id="input6" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    -->

    <!-- Exotic Option Specific Parameters (initially hidden) -->
    <VBox fx:id="exoticParamsContainer" visible="false" managed="false"
        GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2">
        <Text text="Exotic Option Parameters:" styleClass="section-header"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="300"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
                <RowConstraints vgrow="SOMETIMES" minHeight="30"/>
            </rowConstraints>

            <Text text="Barrier Price:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                styleClass="input-label"/>
            <TextField fx:id="exoticInput1" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Text text="Option Style:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                styleClass="input-label"/>
            <ComboBox fx:id="exoticStyleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Barrier"/>
                        <String fx:value="Asian"/>
                        <String fx:value="Cliquet"/>
                        <String fx:value="Compound"/>
                        <String fx:value="Lookback"/>
                        <String fx:value="Bermudan"/>
                        <String fx:value="Barrier"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </GridPane>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER"
        GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2">
        <Button text="Calculate" fx:id="calculateButton"
            maxWidth="Infinity"
            onAction="#handleCalculate"
            styleClass="action-button"/>
        <Button text="Save Results" fx:id="saveButton"
            maxWidth="Infinity"
            styleClass="action-button"/>
    </HBox>

    <!-- Results Area -->
    <VBox fx:id="resultContainer" GridPane.columnIndex="0" GridPane.rowIndex="9"
        GridPane.columnSpan="2" spacing="5">
        <Text text="Results:" styleClass="section-header"/>
        <TextArea fx:id="" editable="false"
              styleClass="result-text"/>
    </VBox>

</GridPane>